<h1>Listing products</h1>
<table class="list">
  <tr>
    <th></th>
    <th>Code</th>
    <th>Name</th>
    <th>Price</th>
    <th colspan='3'>Action</th>
  </tr>
<% for product in @products %>
  <tr>
    <td><%= image_tag(product.image_path || image_path('store/application_icon.png')) %></td>
    <td><%=h product.code %></td>
    <td><%=h product.name %></td>
    <td><%=h number_to_currency(product.price) %></td>
    <td><%= link_to 'Show', admin_product_path(product) %></td>
    <td><%= link_to 'Edit', edit_admin_product_path(product) %></td>
    <td><%= link_to 'Delete', admin_product_path(product), data: { confirm: 'Are you sure?' }, method: :delete %></td>
  </tr>
<% end %>
</table>

<%= link_to 'New product', { controller: 'products', action: 'new' }, { style: 'display: block; padding-top: 10px' } %>
