<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
	<title><%=$STORE_PREFS['store_name']%></title>
    <link rel="icon" href="/favicon.ico" type="image/x-icon"/>
	<%= stylesheet_link_tag 'store', 'theme', :media => 'all' %>
	<%= javascript_include_tag 'application' %>
</head>
<body>
	<div id="page" class="narrow">
		<div id="page_top">
			<% if not $STORE_PREFS['company_logo_path'].blank? %>
			<div id="logo"><a href="<%=$STORE_PREFS['company_url']%>">
				<img src="<%=$STORE_PREFS['company_logo_path']%>" alt="<%=$STORE_PREFS['company_name']%>"/></a>
			</div>
			<% end %>

			<br/>
			<br/>
			<br/>
			<br/>
			<br/>
			<br/>
			<br/>
			<br/>
			<br/>
			<br/>

			<center>
				<%= yield %>
			</center>
		</div>
	</div>
	<% if is_live? && ! $STORE_PREFS['google_analytics_account'].blank? %>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

      ga('create', '<%= $STORE_PREFS['google_analytics_account'] %>', 'auto');
      ga('send', 'pageview');
    </script>
	<% end %>
</body>
</html>
