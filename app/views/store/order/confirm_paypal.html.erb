<script src="https://www.paypalobjects.com/api/checkout.js"></script>
<script>
  paypal.Button.render({
    env: 'sandbox',
    payment: function(resolve, reject) {
      var CREATE_PAYMENT_URL = 'http://localhost:3000/store/paypal/create';
      paypal.request.post(CREATE_PAYMENT_URL)
            .then(function(data) { resolve(data.paymentID); })
            .catch(function(error) { reject(error); });
    },
    onAuthorize: function(data, actions) { 
      var EXECUTE_PAYMENT_URL = 'http://localhost:3000/store/paypal/execute'
      paypal.request.post(EXECUTE_PAYMENT_URL, {
        paymentID: data.paymentID, payerID: data.payerID })
          .then(function(data) { return actions.redirect(); })
          .catch(function(error) { /* go to an error page */ });
    },
    onCancel: function(data, actions) { 
      return actions.redirect();
    }
  }, '#paypal-button');

</script>
